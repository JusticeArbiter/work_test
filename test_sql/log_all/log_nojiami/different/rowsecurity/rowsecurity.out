SET ROLE rls_regress_user1;
SET
PREPARE role_inval AS SELECT * FROM t1;
PREPARE
-- Check plan
EXPLAIN (COSTS OFF) EXECUTE role_inval;
       QUERY PLAN        
-------------------------
 Seq Scan on t1
